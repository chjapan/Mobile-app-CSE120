<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchReportActivity">

    <Button
        android:id="@+id/backButton"
        android:layout_width="177dp"
        android:layout_height="89dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:text="End Route"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alternateRoute" />

    <Button
        android:id="@+id/reportButton"
        android:layout_width="177dp"
        android:layout_height="89dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:text="Report Obstacle"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/getObstaclesButton"
        android:layout_width="177dp"
        android:layout_height="89dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:text="Get Obstacles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reportButton" />

    <Button

        android:id="@+id/alternateRoute"
        android:layout_width="177dp"
        android:layout_height="89dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="96dp"
        android:layout_marginRight="96dp"
        android:text="Get Alternate Route"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getObstaclesButton" />

</android.support.constraint.ConstraintLayout>